<div id="modal-statement-type" class="cf-modal-overlay" style="display: none;">
    <div class="cf-modal-box statement-type-modal-box">
        <input type="hidden" id="modal-statement-type-id" value="" />

        <div class="cf-modal-header statement-type-header">
            <span id="modal-statement-type-title">Título</span>
            <button id="modal-statement-type-close" class="modal-close-button">&times;</button>
        </div>

        <div id="modal-statement-type-tool-bar" class="statement-type-toolbar">
            <button id="modal-statement-type-btn-save" class="statement-type-save-button">
                <img src="~/images/save25.png" alt="Salvar" class="btn-icon" />
                Salvar
            </button>
        </div>

        <div id="modal-statement-type-body" class="statement-type-body">
            <input type="text" id="modal-statement-type-input" maxlength="255" placeholder="Digite algo..." />
        </div>
    </div>
</div>
