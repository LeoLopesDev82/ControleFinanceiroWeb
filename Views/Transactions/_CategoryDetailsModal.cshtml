<div id="modal-category-details" class="cf-modal-overlay" style="display: none;">
    <div class="cf-modal-box category-details-modal-box">
        <input type="hidden" id="category-details-id" value="" />

        <div class="cf-modal-header category-details-header">
            <span id="category-details-title">Título Variável</span>
            <button id="category-details-close" class="modal-close-button">&times;</button>
        </div>

        <div id="category-details-toolbar" class="category-details-toolbar">
            <button id="category-details-btn-save" class="category-details-save-button">
                <img src="~/images/save25.png" alt="Salvar" class="btn-icon" />
                Salvar
            </button>
        </div>

        <div id="category-details-body" class="category-details-body">
            <fieldset class="category-details-groupbox">
                <legend class="category-details-groupbox-title">Tipo de Lançamento</legend>
                <div class="category-details-radio-group">
                    <label><input type="radio" name="category-type" value="fixed" /> Fixo</label>
                    <label><input type="radio" name="category-type" value="variable" /> Variável</label>
                </div>
            </fieldset>

            <label for="category-details-description">Descrição</label>
            <input type="text" id="category-details-description" placeholder="Digite a descrição..." maxlength="255" />

            <label for="category-details-identifiers">Identificadores</label>
            <textarea id="category-details-identifiers" placeholder="Digite os identificadores..."></textarea>
        </div>
    </div>
</div>